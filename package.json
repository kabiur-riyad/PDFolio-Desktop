{
  "name": "pdfolio",
  "version": "1.2.0",
  "description": "A minimalist PDF photography portfolio builder desktop application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "portfolio",
    "photography",
    "pdf",
    "electron"
  ],
  "author": "Kabiur Rahman Riyad",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.pdfolio.app",
    "productName": "PDFolio",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.js",
      "preload.js",
      "index.html",
      "package.json",
      "ui.css",
      "styles.css"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png"
    }
  }
}

